@model Hotel.Data.Data.Booking.Reservation

@{
    ViewData["Title"] = "Confirm Reservation";
}

<h1>Confirmation</h1>

<!-- Tutaj umieść kod do wyświetlenia wszystkich danych rezerwacji, w tym ceny -->
<p>Please confirm the following details:</p>

<table class="table">
    <tr>
        <th>Room:</th>
        <td>@Model.RoomId</td>
    </tr>
    <tr>
        <th>Option:</th>
        <td>@Model.OptionId</td>
    </tr>

    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone Number:</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>City:</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>Address First Line:</th>
        <td>@Model.AdressFirstLine</td>
    </tr>
    <tr>
        <th>Postal Code:</th>
        <td>@Model.PostalCode</td>
    </tr>
    <tr>
        <th>Total Price:</th>
        <td>@Model.TotalPrice</td>
    </tr>
    <tr>
        <th>Check-In Date:</th>
        <td>@Model.CheckIn.ToString("dd-MM-yyyy")</td>
    </tr>
    <tr>
        <th>Check-Out Date:</th>
        <td>@Model.CheckOut.ToString("dd-MM-yyyy")</td>
    </tr>
    <tr>
        <th>Number of Adults:</th>
        <td>@Model.NumberOfAdults</td>
    </tr>
    <tr>
        <th>Number of Children:</th>
        <td>@Model.NumberOfChildren</td>
    </tr>
    <tr>
        <th>Special Requests:</th>
        <td>@Model.SpecialRequests</td>
    </tr>
</table>

<form asp-action="CreateConfirmed" method="post">
    <input type="hidden" asp-for="RoomId" />
    <input type="hidden" asp-for="OptionId" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="City" />
    <input type="hidden" asp-for="AdressFirstLine" />
    <input type="hidden" asp-for="PostalCode" />
    <input type="hidden" asp-for="TotalPrice" />
    <input type="hidden" asp-for="CheckIn" />
    <input type="hidden" asp-for="CheckOut" />
    <input type="hidden" asp-for="NumberOfAdults" />
    <input type="hidden" asp-for="NumberOfChildren" />
    <input type="hidden" asp-for="SpecialRequests" />

    <div class="form-group">
        <input type="submit" value="Confirm Reservation" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
