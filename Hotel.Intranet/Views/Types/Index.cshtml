@model IEnumerable<Hotel.Data.Data.Booking.Extensions.Types>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotosURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAmountOfPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                Facilities
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.PhotosURL)" width="100" height="100">
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAmountOfPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                    @foreach (var facility in item.Facilities)
                    {
                        <span>@facility.NameFacility,</span>
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdType">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdType">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdType">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
