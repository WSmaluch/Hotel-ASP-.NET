@model Hotel.Data.Data.Booking.Extensions.Types

@{
    ViewData["Title"] = "Create";
}

	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title mt-5">Add Type</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form asp-action="Create">
					<div class="row formtype">
						<div class="col-md-4">
							<div class="form-group">
								<label>Name</label>
								<input asp-for="Name" class="form-control" />
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
							<label>Description</label>
							<input asp-for="Description" class="form-control" />
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Size</label>
								<input asp-for="Size" class="form-control" />
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
							<label>Max amount of people</label>
							<input asp-for="MaxAmountOfPeople" class="form-control" />
							</div>
						</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Facilities</label>
							<div class="input-group">
								<select asp-for="Facilities" class="form-control" multiple asp-items="ViewBag.Facilities"></select>
								<div class="input-group-append">
									<a href="#" class="btn btn-primary" id="addFacility" >
										<i style="margin-top:35px" class="fas fa-plus"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>PhotosURL</label>
							<input asp-for="PhotosURL" class="form-control" />
						</div>
					</div>
                    @*<div class="col-md-4">
                        <div class="form-group">
                            <label>File Upload</label>
                            <div class="custom-file mb-3">
                                <input type="file" class="custom-file-input" id="customFile" name="PhotosURL">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                    </div>*@
					</div>
				<button type="submit" class="btn btn-primary buttonedit ml-2">Save</button>
				</form>

			</div>
		</div>
	</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script>
		$(document).ready(function () {
			$('#addFacility').click(function () {
				window.location.href = '/Facilities/Create';
			});
		});
	</script>
}
