@model Hotel.Data.Data.Booking.Room

@{
    ViewData["Title"] = "Create";
}

<div class="content container-fluid">
	<div class="page-header">
		<div class="row align-items-center">
			<div class="col">
				<h3 class="page-title mt-5">Add Room</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<form asp-action="Create">
				<div class="row formtype">
					<div class="col-md-4">
						<div class="form-group">
							<label>TypeId</label>
							<select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Number</label>
							<input asp-for="Number" class="form-control" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>Facilities</label>
							<select asp-for="Facilities" class="form-control" multiple asp-items="ViewBag.Facilities"></select>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-primary buttonedit ml-2">Save</button>
			</form>

		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}